@{
    ViewBag.Title = "Home Page";
}
  
    <div class="row">
        
        <div align="center" class="col-lg-12" >
            <h2 align="center">Find a parking space</h2>
            <form role="form" class="form">
                <div class="form-group">
                    <label>Destination</label>
                    <input class="search" type='text' name='name' id='name' placeholder="Destination">
                </div>
                <div class="form-group">
                    <label>Scheduled arrival of </label>
                    <input id="ex6" type="text" data-slider-id="GC" data-slider-min="0" data-slider-max="6" data-slider-step="0.5" data-slider-value="0"/>
                    <input class="input-slider" type='text'  id='ex6SliderVal' value="0 H" disabled>
                </div>    
      
            </form>            
    </div>
        <div class="row">
            <div class="col-lg-12" align="center">
                <button type="button" class="btn btn-default" onclick="getPark()">Find</button>
            </div>
        </div>
            <hr>
            <div class="row">
                <div class="col-lg-12" id="resPark"></div>
            </div>          
        
    </div>    
    <div id="map"></div>       
      <br />
    
    <script>
        var slider = new Slider("#ex6");
        slider.on("slide", function (slideEvt) {
            document.getElementById("ex6SliderVal").value = slideEvt + "H";
        });
    </script>  